<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8" />
  <title>Automatizovaná kniha jízd</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Tailwind CDN pro rychlé stylingy, můžeš nahradit vlastním stylem -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen p-4">
  <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-xl p-6 space-y-6">
    <h1 class="text-2xl font-bold mb-2">Automatizovaná kniha jízd</h1>
    
    <!-- Výběr vozidla -->
    <div>
      <label class="block font-semibold mb-1">Zvolte vozidlo:</label>
      <select id="car-select" class="w-full p-2 rounded border" onchange="fillCarHeader()">
        <option value="">-- Vyberte vozidlo --</option>
        <!-- Dynamicky generované options -->
      </select>
    </div>
    
    <!-- Hlavička vozidla (auto-vyplní se) -->
    <div id="car-header" class="bg-gray-100 p-3 rounded space-y-1 text-sm"></div>

    <!-- Vstupní události -->
    <div>
      <label class="block font-semibold mb-2">Zadejte události (tankování, pokuty, ubytování):</label>
      <button class="bg-blue-500 text-white rounded px-3 py-1 mb-2" onclick="addEventRow()">Přidat událost</button>
      <table class="w-full border text-xs" id="events-table">
        <thead>
          <tr>
            <th>Datum</th>
            <th>Typ</th>
            <th>Místo</th>
            <th>Poznámka</th>
            <th>Množství (l)</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="events-body">
          <!-- Dynamické řádky událostí -->
        </tbody>
      </table>
      <small class="block text-gray-500 mt-1">* Vyplňte všechny relevantní události, prázdné řádky budou ignorovány.</small>
    </div>

    <!-- Simulace a generování -->
    <div class="flex gap-3">
      <button class="bg-green-600 text-white px-4 py-2 rounded" onclick="simulateLogbook()">Simulovat knihu jízd</button>
      <button class="bg-gray-300 px-4 py-2 rounded" onclick="downloadExcel()" disabled id="download-btn">Stáhnout Excel</button>
    </div>
    <div id="output" class="mt-3 text-xs text-green-600"></div>
  </div>

  <script>
    // DEMO vozidla (tady doplníš dle tvého seznamu)
    const cars = [
      {
        id: 1, typ: "Osobní", ico: "12345678", vozidlo: "Škoda Octavia", rz: "1AB1234", phm: "Natural 95", ridic: "Jan Novák", spotreba: 6
      },
      // Další vozidla ...
    ];

    // Generování menu a vyplnění hlavičky
    window.onload = () => {
      const carSelect = document.getElementById("car-select");
      cars.forEach(car => {
        const opt = document.createElement("option");
        opt.value = car.id;
        opt.text = `${car.vozidlo} (${car.rz})`;
        carSelect.appendChild(opt);
      });
    }

    function fillCarHeader() {
      const car = cars.find(c => c.id == document.getElementById("car-select").value);
      let out = "";
      if(car){
        out += `<strong>Typ vozidla:</strong> ${car.typ}<br>`;
        out += `<strong>IČO:</strong> ${car.ico}<br>`;
        out += `<strong>Vozidlo:</strong> ${car.vozidlo}<br>`;
        out += `<strong>RZ:</strong> ${car.rz}<br>`;
        out += `<strong>PHM:</strong> ${car.phm}<br>`;
        out += `<strong>Řidič:</strong> ${car.ridic}<br>`;
        out += `<strong>Spotřeba:</strong> ${car.spotreba} l/100km<br>`;
      }
      document.getElementById("car-header").innerHTML = out;
    }

    // Přidání nové události
    function addEventRow() {
      const tbody = document.getElementById("events-body");
      const tr = document.createElement("tr");
      tr.innerHTML = `
        <td><input type="date" class="border p-1 rounded" /></td>
        <td>
          <select class="border p-1 rounded">
            <option value="">--</option>
            <option value="Tankování">Tankování</option>
            <option value="Pokuta">Pokuta</option>
            <option value="Ubytování">Ubytování</option>
            <option value="Jiná">Jiná</option>
          </select>
        </td>
        <td><input type="text" class="border p-1 rounded" placeholder="Místo" /></td>
        <td><input type="text" class="border p-1 rounded" placeholder="Poznámka" /></td>
        <td><input type="number" step="0.01" min="0" class="border p-1 rounded" placeholder="Litry" /></td>
        <td><button class="text-red-500" onclick="this.closest('tr').remove()">Smazat</button></td>
      `;
      tbody.appendChild(tr);
    }

    // Simulace knihy jízd – zde voláš backend!
    function simulateLogbook() {
      // Načti zadaná data z formuláře, validuj je a odesli na server (např. přes API)
      // Backend provede simulaci a vygeneruje excel podle zadání
      document.getElementById("output").innerText = "Simulace probíhá... (v produkci zde proběhne volání serveru)";
      document.getElementById("download-btn").disabled = false; // Jen demo
    }

    // Stažení Excelu – v praxi zde doimplementuješ stažení souboru
    function downloadExcel() {
      alert("Zde dojde ke stažení vygenerovaného Excelu.");
    }
  </script>
</body>
</html>

